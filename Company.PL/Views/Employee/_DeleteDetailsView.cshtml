@model EmployeeViewModel
<div class="form-group">
    <img src="~/Files/Images/@Model.ImageName" class="rounded" width="40" height="40" />
    <input asp-for="ImageName" hidden />
</div>
<div>
    <label class="col-form-label" asp-for="Name">Name</label>
    <input readonly class="form-control" asp-for="Name" />

</div>
<div>
    <label class="col-form-label" asp-for="Email">Email</label>
    <input readonly class="form-control" asp-for="Email" />

</div>
<div>
    <label class="col-form-label" asp-for="Address">Address</label>
    <input readonly class="form-control" asp-for="Address" />

</div>
<div>
    <label class="col-form-label" asp-for="Age">Age</label>
    <input readonly class="form-control" asp-for="Age" />

</div>
<div>
    <label class="col-form-label" asp-for="Phone">Phone</label>
    <input readonly class="form-control" asp-for="Phone" />

</div>
<div>
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input readonly class="form-control" asp-for="Salary" />

</div>
<div>
    <label class="col-form-label" asp-for="HiringDate">Hiring Date</label>
    <input readonly class="form-control" asp-for="HiringDate" />

</div>