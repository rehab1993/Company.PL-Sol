@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Employee</h1>
<div asp-validation-summary="All"></div>
<form asp-action="Edit">

    <div>
        <label class="col-form-label" asp-for="Name">Name</label>
        <input  class="form-control" asp-for="Name" />

    </div>
    <div>
        <label class="col-form-label" asp-for="Email">Email</label>
        <input  class="form-control" asp-for="Email" />

    </div>
    <div>
        <label class="col-form-label" asp-for="Address">Address</label>
        <input  class="form-control" asp-for="Address" />

    </div>
    <div>
        <label class="col-form-label" asp-for="Age">Age</label>
        <input  class="form-control" asp-for="Age" />

    </div>
    <div>
        <label class="col-form-label" asp-for="Phone">Phone</label>
        <input  class="form-control" asp-for="Phone" />

    </div>
    <div>
        <label class="col-form-label" asp-for="Salary">Salary</label>
        <input  class="form-control" asp-for="Salary" />

    </div>
    <div>
        <label class="col-form-label" asp-for="HiringDate">Hiring Date</label>
        <input readonly class="form-control" asp-for="HiringDate" />

    </div>


    <input class="btn btn-primary" type="submit" value="Save" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>


</form>
@section ValidationScriptSection {
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
