@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<a asp-action="Create" class="btn btn-success">Create New Employee</a>

<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped mt-3 table-hover">
        <thead>
       
        <td>@Html.DisplayNameFor(e => e.Name)</td>
        <td>@Html.DisplayNameFor(e => e.Email)</td>
         <td>@Html.DisplayNameFor(e => e.Address)</td>
        <td>@Html.DisplayNameFor(e => e.Age)</td>
        <td>@Html.DisplayNameFor(e => e.Phone)</td>
        <td>@Html.DisplayNameFor(e => e.Salary)</td>
        <td>@Html.DisplayNameFor(e => e.HiringDate)</td>
       
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>

        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Email</td>
                    <td>@Employee.Address</td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Phone</td>
                    <td>@Employee.Salary</td>
                    <td>@Employee.HiringDate</td>
                    
                   @*  <td><a asp-action="Details" asp-route-id="@department.Id"><i class="fas fa-eye">Edit</i></a></td>
                    <td><a asp-action="Update" asp-route-id="@department.Id"><i class="fas fa-edit">Ubdate</i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.Id"><i class="fas fa-trash"></i></a>Delete</td> *@
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Employees</h3>
    </div>
}

