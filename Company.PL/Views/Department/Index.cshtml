@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<a asp-action="Create" class="btn btn-success">Create New Department</a>
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped mt-3 table-hover"> 
        <thead>
        <td>@Html.DisplayNameFor(d => d.Code)</td>
         <td>@Html.DisplayNameFor(d => d.Name)</td>
        <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
        <td>Details</td>
        <td>Update</td>
        <td>Delete</td>

        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-id="@department.Id"><i class="fas fa-eye">Edit</i></a></td>
                    <td><a asp-action="Update" asp-route-id="@department.Id"><i class="fas fa">Ubdate</i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.Id"><i class="fas fa-trash"></i></a>Delete</td>
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Department</h3>
    </div>
}

